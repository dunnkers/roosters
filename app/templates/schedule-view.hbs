<table class="schedule">
<thead>
<tr>
<th>Uur\<wbr>Dag</th>
<th>maandag</th>
<th>dinsdag</th>
<th>woensdag</th>
<th>donderdag</th>
<th>vrijdag</th>
</tr>
</thead>
<tbody>
{{#each table}}

  <tr>
  {{#each this}}


    <td>
      {{#if header}}
      	u{{index}}
      {{else}}
  	    {{#each content}}
          {{#if between}}
            tussen
          {{else}}
              {{#unless empty}}
        		      {{subject}}
                  <br/>
                  <div {{bind-attr title=teacher.name}}>
          		      {{#link-to 'schedule' teacher.id}}
          		        {{teacher.id}}
          		      {{/link-to}}
                    </div>
                  {{#link-to 'schedule' room.id}} {{room.id}}
                  {{/link-to}}
              {{/unless}}
          {{/if}}
  	    {{/each}}
      {{/if}}
    </td>

  {{/each}}
  </tr>

{{/each}}
</tbody>
</table>


<table class="schedule">
<tbody>
  {{#each rows}}
    <tr>
      {{#each days}}
          <td>
        {{#each content}}
            {{subject}}<br />
            {{teacher.id}}<br />
            {{room.id}}
        {{/each}}
          </td>
      {{/each}}
    </tr>
  {{/each}}
</tbody>
</table>


<table class="schedule">
<tbody>
  {{#each rowz}}
    <tr>
      {{#each days}}
          <td>
        {{#each content}}
            {{subject}}<br />
            {{teacher.id}}<br />
            {{room.id}}
        {{/each}}
          </td>
      {{/each}}
    </tr>
  {{/each}}
</tbody>
</table>
