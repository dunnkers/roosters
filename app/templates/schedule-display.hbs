<table class="schedule">
  <thead>
    <tr>
      <th>Uur\Dag</th>
      <th>maandag</th>
      <th>dinsdag</th>
      <th>woensdag</th>
      <th>donderdag</th>
      <th>vrijdag</th>
    </tr>
  </thead>

  <tbody>

    {{#each row in rows}}
        <tr>
          {{#each cell in row}}
              {{#if cell.header}}
                  <th>
                      u{{cell.index}}
                  </th>
              {{else}}
                  <td>
                      {{cell-display lessons=cell.content}}
                  </td>
              {{/if}}
          {{/each}}
        </tr>
    {{/each}}

  </tbody>
</table>
